# Currency symbol shown in the UI
NEXT_PUBLIC_CURRENCY=$

# Clerk Authentication
# https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# MongoDB Atlas
# https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net
MONGODB_DB_NAME=ecommerce

# Inngest (background jobs)
# https://app.inngest.com
INNGEST_SIGNING_KEY=signkey-prod-xxxxx
INNGEST_EVENT_KEY=xxxxx

# Cloudinary (image uploads)
# https://console.cloudinary.com
CLOUDINARY_CLOUD_NAME=xxxxx
CLOUDINARY_API_KEY=xxxxx
CLOUDINARY_API_SECRET=xxxxx

# Stripe (payments)
# https://dashboard.stripe.com
STRIPE_API_KEY=pk_test_xxxxx
STRIPE_API_SECRET=sk_test_xxxxx

# Site URL (used for Stripe redirects)
# Set to your production domain in production
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Development URL for local testing
NEXT_PUBLIC_DEV_URL=http://localhost:3000

# Inngest app identifier (optional)
INNGEST_APP_ID=ecommerce-app

# Contact email shown on the website
NEXT_PUBLIC_CONTACT_EMAIL=your-email@example.com

# Admin email for setAdmin script
ADMIN_EMAIL=your-email@example.com

# Owner Clerk user ID â€” only this user can modify seller data
# Leave empty to allow all sellers to modify data
OWNER_USER_ID=
